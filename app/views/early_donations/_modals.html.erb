<div class="modal fade" id="confirm-modal-<%= @currency %>" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document" style="min-width: 70%">
    <div class="modal-content">
      <div class="modal-body text-center">
        <h3 class="mx-auto pt-5">CONTRIBUTE
          <%= @currency.upcase %><br/></h3>
        <div class="row justify-content-sm-center mt-5">
          <div class="col-8 text-left">
            Hello
            <%= current_user.username %>, thanks for your contribution to LWF Project with
            <%= @currency.upcase %>
            coin.<br>

            <p class="text-danger" style="padding-bottom: 42px;">
              You’ve decided to contribute for:
              <span class="blue-text-modal">
                <span class="value-currency-send"></span>
                <%= @currency.upcase %>
              </span>
            </p>

            <p>
              <div style="padding-bottom: 42px;">
                Please insert your <%= @currency.upcase %> address from where
                you're going to send the transaction (to connect it to your profile
                and charge up your LWF balance after contribution):
              </div>

              <div class="addressAlert alert alert-danger"></div>

              <%= form_tag(profile_path, method: :put, remote: true) do %>
              <%= text_field_tag "#{@currency}_address", current_user.address(@currency), placeholder: "Your #{@currency.upcase} address", required: true %>
              <%= submit_tag('SAVE', class: 'btn btn-primary') %>
              <% end %>
            </p>

            <p class="text-danger">Send your contribution to:</p>

            <p class="valute-address" style="padding-bottom: 42px;">
              <% if @currency == 'ark' %>
              AGyJLEatH22atAeSxsrScyWzdDu1bdLXn1
              <% elsif @currency == 'lisk' %>
              10214293569612168828L
              <% elsif @currency == 'shift' %>
              8716127454558448351S
              <% elsif @currency == 'oxy' %>
              15287186081845849630X
              <% elsif @currency == 'raiblocks' %>
              xrb_114u5wospeegr1xpgzj1gorgm4d13p4ie8hkz79nixci1e4fi3ftp6jmtwdq
              <% end %>
            </p>
          </div>
        </div>
        <a href="" class="btn btn-default redirect-link">OK</a>
      </div>
    </div>
  </div>
</div>
<% end %>
