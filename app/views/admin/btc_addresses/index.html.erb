<div class="pageheader">
  <h1>BTC Addresses</h1>
</div>

<section id="main-content" class="animated fadeInUp">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">BTC Address list</h3>
          <div class="actions pull-right">
            <i class="fa fa-expand"></i>
            <i class="fa fa-chevron-down"></i>
          </div>
        </div>
        <div class="panel-body">
          <div class="col-xs-12">
            <%= link_to 'Add address', new_admin_btc_address_path, class: 'btn btn-success' %>
            <%= render 'admin/addresses/table' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<% content_for :append_js do %>
  <script>
    $(document).ready(function () {
      $('table').dataTable();
    });
  </script>
<% end %>
