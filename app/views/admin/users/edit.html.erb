<div class="pageheader">
  <h1>Users</h1>
</div>

<section id="main-content" class="animated fadeInUp">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Edit user <%= @user.username %></h3>
          <div class="actions pull-right">
            <i class="fa fa-expand"></i>
            <i class="fa fa-chevron-down"></i>
          </div>
        </div>
        <div class="panel-body">
          <div class="col-xs-12">
            <%= form_for(@user, url: admin_user_path(@user), method: :put, html: {class: 'text-left'}) do |f| %>

            <% if @user.errors.any? %>
            <ul>
              <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
            <% end %>

            <div class="form-group">
              <label>Email *</label>
              <%= f.email_field :email, class: 'form-control', required: true %>
            </div>

            <div class="form-group">
              <label>Username *</label>
              <%= f.text_field :username, class: 'form-control', required: true %>
            </div>

            <div class="form-group">
              <label>Contribution Bonus</label>
              <%= f.number_field :contribution_bonus, class: 'form-control' %>
            </div>

            <%= f.submit(nil, class: 'ml-3 btn btn-success') %>
            <!-- <button type="submit" class="ml-3 btn btn-success">OK</button> -->

            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
