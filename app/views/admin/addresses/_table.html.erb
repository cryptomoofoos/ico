<table class="table table-striped table-bordered table-responsive" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Address</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |a| %>
      <tr>
        <td><%= a.address %></td>
        <td><%= a.created_at.strftime('%d/%m/%Y %H:%M') %></td>
        <td><%= render 'actions', address: a %></td>
      </tr>
    <% end %>
  </tbody>
</table>
